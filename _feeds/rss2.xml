---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.baseurl | absolute_url | xml_escape }}/</link>
    <atom:link rel="self" type="application/rss+xml" href="{{ '/rss2.xml' | absolute_url | xml_escape }}" />
    <description>{{ site.description | xml_escape }}</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts %}
      <item>
        <guid isPermaLink="true">{{ post.url | absolute_url | xml_escape }}</guid>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post.url | absolute_url | xml_escape }}</link>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <author>{{ site.author | xml_escape }} &lt;{{ site.email | xml_escape }}&gt;</author>
        <description>{{ post.content | xml_escape }}</description>
      </item>
    {% endfor %}
  </channel>
</rss>
